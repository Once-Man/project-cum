<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                <h4 class="font-weiht-bold"><%= onecustomer.firstname %> <%= onecustomer.lastname %></h4>
            </div>
            <div class="col-4">
                <a href="/" class="btn btn-success float-right"><i class="fa fa-plus mr-1"></i>All Customers</a>
            </div>
        </div>
    </div>
    <div class="card-body">
